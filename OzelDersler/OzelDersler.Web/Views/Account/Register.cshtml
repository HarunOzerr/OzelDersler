@model RegisterDto

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="container">
        <div class="row">
            <h1 class="display-5">Kayıt Ol</h1>
            <div class="row">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div>
                    <label class="form-label">Üyelik Tipi:</label>

                    <select name="registerType" class="form-select">
                        <option value="teacher">Öğretmen</option>
                        <option value="student">Öğrenci</option>
                    </select>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label asp-for="FirstName" class="form-label"></label>
                    <input class="form-control" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label asp-for="LastName" class="form-label"></label>
                    <input class="form-control" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label asp-for="UserName" class="form-label"></label>
                    <input class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label asp-for="Email" class="form-label"></label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label asp-for="Password" class="form-label"></label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label asp-for="RePassword" class="form-label"></label>
                    <input class="form-control" asp-for="RePassword" />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input class="form-control" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label class="form-label">Cinsiyet</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="Erkek">Erkek</option>
                        <option value="Kadın">Kadın</option>
                    </select>
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                <a type="submit" class="btn btn-warning" asp-controller="Home" asp-action="Index">Vazgeç</a>
            </div>
        </div>
    </div>
</form>