@using OzelDersler.Web.Areas.Teachers.Models;
@model TeacherCourseDetailDto
<link rel="stylesheet" href="~/css/coursedetail.css" asp-append-version="true" />

<div class="container">
    <div class="team-single">
        <div class="row">
            <div class="col-lg-4 col-md-5 xs-margin-30px-bottom">
                <div class="team-single-img">
                    <img src="~/images/@Model.BranchImageUrl" alt="" width="350">
                </div>
                <div class="bg-light-gray padding-30px-all md-padding-25px-all sm-padding-20px-all text-center">
                    <h4 class="margin-10px-bottom font-size24 md-font-size22 sm-font-size20 font-weight-600">@Model.FirstName @Model.LastName</h4>
                    <p class="sm-width-95 sm-margin-auto">Hakkımda</p>
                </div>
            </div>

            <div class="col-lg-8 col-md-7">
                <div class="team-single-text padding-50px-left sm-no-padding-left">
                    <h4 class="font-size38 sm-font-size32 xs-font-size30">@Model.CourseName</h4>
                    <p class="no-margin-bottom">@Model.CourseDescription</p>
                    <div class="contact-info-section margin-40px-tb">
                        <ul class="list-style9 no-margin">
                            <li>

                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="far fa-gem text-yellow"></i>
                                        <strong class="margin-10px-left text-yellow">Saatlik Ücret:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@($"{Model.PricePerHour:C0}")</p>
                                    </div>
                                </div>

                            </li>
                            <li>

                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="far fa-file text-lightred"></i>
                                        <strong class="margin-10px-left text-lightred">Branş:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.BranchName</p>
                                    </div>
                                </div>

                            </li>
                            <li>

                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-map-marker-alt text-green"></i>
                                        <strong class="margin-10px-left text-green">Adres:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Address</p>
                                    </div>
                                </div>

                            </li>
                            <li>

                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-mobile-alt text-purple"></i>
                                        <strong class="margin-10px-left xs-margin-four-left text-purple">Telefon:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Phone</p>
                                    </div>
                                </div>

                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-5 col-5">
                                        <i class="fas fa-envelope text-pink"></i>
                                        <strong class="margin-10px-left xs-margin-four-left text-pink">Email:</strong>
                                    </div>
                                    <div class="col-md-7 col-7">
                                        <p>@Model.Email</p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>