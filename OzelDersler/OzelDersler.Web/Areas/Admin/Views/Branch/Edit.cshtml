@model BranchUpdateDto

<hr />
<h1 class="display-6">Branş Düzenle</h1>
<hr />

<form asp-area="Admin" asp-controller="Branch" asp-action="Edit" method="post">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                    <a type="submit" class="btn btn-warning" asp-controller="Home" asp-action="Index">Vazgeç</a>
                </div>
            </div>
        </div>
    </div>
</form>