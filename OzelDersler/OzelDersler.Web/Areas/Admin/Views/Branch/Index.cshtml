@model List<BranchListDto>
    <h6 class="display-6">Branşlar</h6>
<hr />
<a class="btn btn-dark" asp-area="Admin" asp-controller="Branch" asp-action="Create">Yeni Öğrenci Ekle</a>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Branş Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Branch.Id</td>
                <td>
                    <img src="~/images/@item.Branch.ImageUrl" width="40">
                </td>
                <td>@item.Branch.BranchName</td>
                <td>
                    <a asp-area="Admin" asp-controller="Branch" asp-action="Edit" asp-route-id="@item.Branch.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Branch" asp-action="Delete" asp-route-id="@item.Branch.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

