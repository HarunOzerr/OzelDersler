@model List<TeacherListDto>

<hr />
<a class="btn btn-dark" asp-area="Admin" asp-controller="Teacher" asp-action="Create">Yeni Öğretmen Ekle</a>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Deneyim</th>
            <th>E Mail</th>
            <th>Kullanıcı Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Teacher.Id</td>
                <td>
                    @if (item.Teacher.Gender == "Erkek")
                    {
                        <img src="~/images/10.png" width="40">
                    }else
                    {
                        <img src="~/images/11.png" width="40">
                    }
                </td>
                <td>@item.Teacher.FirstName</td>
                <td>@item.Teacher.LastName</td>
                <td>@item.Teacher.Experience</td>
                <td>@item.User.Email</td>
                <td>@item.User.UserName</td>
                <td>
                    <a asp-area="Admin" asp-controller="Teacher" asp-action="Edit" asp-route-id="@item.Teacher.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Teacher.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

