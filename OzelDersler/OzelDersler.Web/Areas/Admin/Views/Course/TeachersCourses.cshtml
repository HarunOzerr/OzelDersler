@model List<TeacherCourseDto>
<h6 class="display-6">Öğretmen Kursları</h6>
<hr />
<a class="btn btn-dark" asp-area="Admin" asp-controller="Course" asp-action="AddTeacherCourse">Yeni Kurs Ekle</a>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Kurs Adı</th>
            <th>Kurs Veren</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseId</td>
                <td>
                    <img src="~/images/@item.BranchImageUrl" width="40">
                </td>
                <td>@item.CourseName</td>
                <td>@item.FirstName @item.LastName</td>
                <td>
                    <a asp-area="Admin" asp-controller="Course" asp-action="TeacherCourseEdit" asp-route-id="@item.CourseId" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Course" asp-action="DeleteTeacherCourse" asp-route-id="@item.CourseId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

