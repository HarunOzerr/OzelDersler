@model List<StudentListDto>
<h6 class="display-6">Öğrenciler</h6>
<hr />
<a class="btn btn-dark" asp-area="Admin" asp-controller="Student" asp-action="Create">Yeni Öğrenci Ekle</a>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>E Mail</th>
            <th>Kullanıcı Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student.Id</td>
                <td>
                    @if (item.Student.Gender == "Erkek")
                    {
                        <img src="~/images/10.png" width="40">
                    }
                    else
                    {
                        <img src="~/images/11.png" width="40">
                    }
                </td>
                <td>@item.Student.FirstName</td>
                <td>@item.Student.LastName</td>
                <td>@item.User.Email</td>
                <td>@item.User.UserName</td>
                <td>
                    <a asp-area="Admin" asp-controller="Student" asp-action="Edit" asp-route-id="@item.Student.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Student" asp-action="Delete" asp-route-id="@item.Student.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

